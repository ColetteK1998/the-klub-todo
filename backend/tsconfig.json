{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./node_modules/@types/node"],
    "types": ["node", "express", "cors"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
